<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="talkapp.org.talkappmobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="talkapp.org.talkappmobile.app.TalkappMobileApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <!-- android:theme="@style/AppTheme"> -->
        <activity
            android:name="talkapp.org.talkappmobile.activity.PracticeWordSetActivity_"
            android:label="Используй слова"
            android:parentActivityName="talkapp.org.talkappmobile.activity.MainActivity_"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="talkapp.org.talkappmobile.activity.MainActivity_" />
        </activity>

        <activity
            android:name="talkapp.org.talkappmobile.activity.MainActivity_"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="talkapp.org.talkappmobile.activity.CrashActivity_"
            android:label="@string/title_crash_main"
            android:theme="@style/Theme.AppCompat" />

        <activity
            android:name="talkapp.org.talkappmobile.activity.StatisticActivity_"
            android:label="@string/title_activity_statistic"
            android:parentActivityName="talkapp.org.talkappmobile.activity.MainActivity_"
            android:theme="@style/AppTheme" />

    </application>

</manifest>