<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ProgressBar
        android:id="@+id/please_wait_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="64dp"
        android:visibility="gone" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainForm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="Word # 1"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word1"
                android:ems="15"
                android:hint="Word # 2"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word2"
                android:ems="15"
                android:hint="Word # 3"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word3"
                android:ems="15"
                android:hint="Word # 4"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word4"
                android:ems="15"
                android:hint="Word # 5"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word5"
                android:ems="15"
                android:hint="Word # 6"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word6"
                android:ems="15"
                android:hint="Word # 7"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word7"
                android:ems="15"
                android:hint="Word # 8"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word8"
                android:ems="15"
                android:hint="Word # 9"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word9"
                android:ems="15"
                android:hint="Word # 10"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word10"
                android:ems="15"
                android:hint="Word # 11"
                android:inputType="text"
                android:textSize="23sp" />

            <talkapp.org.talkappmobile.activity.custom.PhraseTranslationInputTextView_
                android:id="@+id/word12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word11"
                android:ems="15"
                android:hint="Word # 12"
                android:inputType="text"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/word12"
                android:text="@string/adding_new_word_set_fragment_button_save" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
