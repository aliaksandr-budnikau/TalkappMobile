<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorPanelBackground"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:textColor="@color/color.word_set_vocabulary_item.word"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/word"
        android:background="@color/colorPanelBackground"
        android:hint="@string/phrase_translation_input_word_text_view_hint"

        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/color.word_set_vocabulary_item.translation"
        android:textSize="7pt" />

</RelativeLayout>